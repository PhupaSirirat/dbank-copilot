# .env.example
# Copy this file to .env and update with your actual values
# cp .env.example .env

# ==============================================
# Database Configuration
# ==============================================
POSTGRES_DB=dbank
POSTGRES_USER=dbank_user
POSTGRES_PASSWORD=dbank_pass_2025  # CHANGE THIS IN PRODUCTION!
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# Docker internal port (don't change unless you know what you're doing)
POSTGRES_INTERNAL_PORT=5432

# ==============================================
# OpenAI Configuration
# ==============================================
OPENAI_API_KEY=sk-your-openai-api-key-here
# Embedding Configuration
EMBEDDING_PROVIDER=openai  # Options: 'openai' or 'local'
EMBEDDING_MODEL=text-embedding-3-small

# For local embeddings (if EMBEDDING_PROVIDER=local)
# EMBEDDING_MODEL=all-MiniLM-L6-v2

# ==============================================
# Chunking Configuration
# ==============================================
CHUNKING_METHOD=llm  # Options: 'llm' or 'simple'
TARGET_CHUNK_SIZE=800
MAX_CHUNK_SIZE=1200

# ==============================================
# Application Configuration
# ==============================================
ENVIRONMENT=development  # Options: 'development', 'staging', 'production'
DEBUG=true
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Service Ports (for docker-compose)
API_PORT=8001
MCP_PORT=8000
FRONTEND_PORT=3000

# ==============================================
# SQL Query Configuration
# ==============================================
SQL_TIMEOUT_SECONDS=30
MAX_RESULT_ROWS=1000

# ==============================================
# Vector Store Configuration
# ==============================================
VECTOR_DIMENSION=1536  # OpenAI text-embedding-3-small dimension

# ==============================================
# Anthropic Configuration (Optional)
# ==============================================
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
# ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# ==============================================
# MCP Server Configuration
# ==============================================
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000

# ==============================================
# FastAPI Configuration
# ==============================================
API_HOST=0.0.0.0
API_PORT=8001
API_RELOAD=true  # Set to false in production

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8001"]

# ==============================================
# Security (Production Only)
# ==============================================
# SECRET_KEY=your-secret-key-here-change-this-in-production
# JWT_SECRET=your-jwt-secret-here
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_MINUTES=60

# ==============================================
# Feature Flags
# ==============================================
ENABLE_PII_MASKING=true
ENABLE_QUERY_LOGGING=true
ENABLE_RATE_LIMITING=false  # Enable in production

# ==============================================
# Third-party Services (Optional)
# ==============================================
# SENTRY_DSN=https://your-sentry-dsn
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# ==============================================
# Development Tools (Dev/Staging Only)
# ==============================================
# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@dbank.local
PGADMIN_DEFAULT_PASSWORD=admin

# ==============================================
# Monitoring & Observability (Production)
# ==============================================
# PROMETHEUS_PORT=9090
# GRAFANA_PORT=3001

# ==============================================
# Backup Configuration
# ==============================================
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# ==============================================
# Notes
# ==============================================
# 1. Never commit .env file to version control
# 2. Always use strong passwords in production
# 3. Rotate API keys regularly
# 4. Use Docker secrets or vault for sensitive data in production
# 5. Test configuration changes in staging first